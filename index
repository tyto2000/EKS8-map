<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Mapa povrch≈Ø pro longboard</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <style>
    html, body, #map { height:100%; margin:0; }
  </style>
</head>
<body>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    // üîó Sem dej odkaz na sv≈Øj ve≈ôejnƒõ sd√≠len√Ω GeoJSON soubor z Google Disku
    const DATA_URL = "https://drive.google.com/file/d/1rXCuZ260GR1ipC3-LE62WRM5I_xMN1gb/view?usp=sharing";

    const map = L.map("map").setView([50.0755,14.4378], 13);

    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      attribution: "&copy; <a href='https://www.openstreetmap.org/copyright'>OSM</a>"
    }).addTo(map);

    // Funkce pro naƒçten√≠ GeoJSON
    function loadGeoJSON(url) {
      fetch(url)
        .then(r => r.json())
        .then(data => {
          L.geoJSON(data, {
            onEachFeature: (feature, layer) => {
              let p = feature.properties || {};
              let popup = `<b>${p.surface || ""}</b><br>${p.condition || ""}<br>${p.note || ""}`;
              layer.bindPopup(popup);
            },
            style: f => ({ color: f.properties?.color || "red", weight: f.properties?.width || 4 }),
            pointToLayer: (f, latlng) => L.circleMarker(latlng, {
              radius: 6,
              color: f.properties?.color || "blue",
              weight: 2
            })
          }).addTo(map);
        })
        .catch(err => {
          console.error("Chyba p≈ôi naƒç√≠t√°n√≠ GeoJSON:", err);
        });
    }

    loadGeoJSON(DATA_URL);
  </script>
</body>
</html>
